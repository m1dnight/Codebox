@model CodeBox.WebUI.Models.Account.EditAccountDetailsViewModel

@{
    ViewBag.Title = "EditAccountDetails";
}

@section Title
{
   Edit your profile
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("EditAccountDetails", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Account Details</legend>

        @if (Model.ImageMimetype == null)
        {
            @:<p>No Image</p>
        }
        else
        {
            <img width="150" height="150" src="@Url.Action("GetImage", "Account", new{Model.UserId})"/>
        }

        @Html.EditorForModel(Model)
            <div class="editor-label">Upload avatar</div>
        <p>
            <input type="file" name="image"/>
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Home", "Index", "Home")
</div>
