@using CodeBox.WebUI.Models.Group
@model CodeBox.Domain.Concrete.ORM.Group
@section Title{
    Editing @Model.Name
}
		<link href="@Url.Content("~/Content/GroupEdit.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Group", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Group</legend>
        @if (Model.ImageMimeType == null)
        {
            @:<pNo Image</p>
        }
        else
        {
        <div class="editor-label">
        Group image
        </div>
            <img width="150" height="150" id="GroupImage" src="@Url.Action("GetImage", "Group", new { Model.Id })" alt=""/>
        }
        @Html.EditorForModel(Model)
        <div class="editor-label">
        Upload group image
        </div>
        <p>
            
            <input type="file" name="image" id="Image"/>
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>

    </fieldset>
}
        @{
            Html.RenderPartial("AddUserToGroup", new AddUserViewModel { GroupId = Model.Id });
        }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
